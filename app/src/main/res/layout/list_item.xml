<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/list_item_linear_layout"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textAlignment="center"
            android:padding="5dp"
            android:id="@+id/list_item_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEXT 101"
            />

        <ImageView
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/list_item_device_icon"
            app:srcCompat="@drawable/ic_wb_sunny_black_24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rey.material.widget.Switch
            android:padding="5dp"
            app:sw_trackSize="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/list_item_switch_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/list_item_device_special_attribute"
            android:text="Temperature: 53deg"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</android.support.v7.widget.CardView>